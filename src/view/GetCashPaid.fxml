<AnchorPane id="AnchorPane" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GetCashPaidController">
    <children>
        <VBox alignment="CENTER" layoutY="10.0" prefHeight="150.0" prefWidth="400.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox layoutX="10.0" layoutY="10.0" spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Get Cash Paid" />
                        <Separator />
                    </children>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </VBox>
                <HBox alignment="CENTER" prefHeight="80.0" prefWidth="380.0" spacing="10.0">
                    <children>
                        <VBox spacing="10.0">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                     <children>
                        <Label text="Cash Paid:">
                           <font>
                              <Font size="25.0" />
                           </font>
                        </Label>
                     </children>
                        </VBox>
                        <VBox spacing="10.0">
                     <children>
                        <TextField fx:id="tfCashPaid" onAction="#tfCashPaidOnAction" prefHeight="36.0" prefWidth="177.0">
