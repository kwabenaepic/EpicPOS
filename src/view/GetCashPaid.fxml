                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <children>
                        <Button fx:id="btnOk" mnemonicParsing="false" onAction="#btnOkOnAction" prefHeight="30.0" prefWidth="125.0" styleClass="btnTender" text="Ok">
                     <font>
                        <Font size="20.0" />
                     </font></Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
        <Button fx:id="btnClose" mnemonicParsing="false" onAction="#btnCloseOnAction" prefHeight="34.0" prefWidth="32.0" stylesheets="@../css/btnOnText.css" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    </children>
    <stylesheets>
        <URL value="@../css/Modena.css" />
        <URL value="@../css/PopUp.css" />
      <URL value="@../css/PosClient.css" />
